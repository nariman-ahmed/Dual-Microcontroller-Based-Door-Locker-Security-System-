	_delay_ms(500);
	LCD_clearScreen();
	LCD_displayString("door open");

//	UART_sendByte(DOOR_OPEN_CW);
//	DcMotor_Rotate(MOTOR_CW);

	//door 15 second delay
//	Timer_setCallBack(&door_callBackTimer,TIMER1);
	Timer_init(&timer1_config);
//
